<p id="notice"><%= notice %></p>

<h1>お気に入り一覧</h1>

<% if @favorites.present? %>
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Content</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @favorites.each do |favorite| %>
        <tr>
          <td><%= image_tag favorite.feed.image.to_s %></td>
          <td><%= favorite.feed.content %></td>
          <td><%= favorite.user.name %></td>
          <td><%= link_to 'お気に入り解除する', favorite_path(id: favorite.id), method: :delete, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
  </tbody>
</table>
<% else %>
  <strong>お気に入りはありません</strong>
<% end %>

<br>
<%= link_to 'Back', feeds_path %>
